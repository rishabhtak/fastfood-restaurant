model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Inventory {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Int
  image       Json
  category    String
  createdAt   DateTime @default(now())
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
}
